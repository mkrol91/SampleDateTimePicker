<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/time_button_timer"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/switch_rectangle_left_red"
        android:gravity="center_vertical|center_horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_white_24dp" />

        <TextView
            android:id="@+id/time_button_tv"
            style="@style/TimePickerTimeTextSmall"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current time" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_button_timer"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:layout_weight="1"
        android:background="@drawable/switch_rectangle_right_white"
        android:gravity="center_vertical|center_horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_note_grey600_24dp" />

        <TextView
            android:id="@+id/date_button_tv"
            style="@style/TimePickerTimeTextSmall"
            android:textColor="@color/picker_icon_gray"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current date" />

    </LinearLayout>

</LinearLayout>


